<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.facundo.demo_3m" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MenuActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ImagenesMenu"
            android:label="@string/title_activity_imagenes_menu"
            android:parentActivityName=".MenuActivity"
            android:screenOrientation="landscape" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.facundo.demo_3m.MenuActivity" />
        </activity>
        <activity
            android:name=".VideoSelectionActivity"
            android:label="@string/title_activity_video_selection"
            android:parentActivityName=".MenuActivity"
            android:screenOrientation="landscape" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.facundo.demo_3m.MenuActivity" />
        </activity>
        <activity
            android:name=".ImageCarroucelActivity"
            android:label="@string/title_activity_image_carroucel"
            android:parentActivityName=".MenuActivity"
            android:screenOrientation="landscape" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.facundo.demo_3m.MenuActivity" />
        </activity>
    </application>

</manifest>
